{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "build",
        "target": "ESNext",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "lib": ["ESNext"],
        "moduleResolution": "Node",
        "types": ["love-typescript-definitions", "@typescript-to-lua/language-extensions"]
    },
    "include": [
        "main.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "build",
        "legacy",
        "todo.ts"
    ],
    "tstl": {
        "luaTarget": "JIT"
    }
}
